{
  "extends": "@tsconfig/node16/tsconfig.json",
  "defaultSeverity": "error",
  "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "declaration": true,
      "outDir": "./dist"
  },
  "exclude": [
      "node_modules",
      "dist"
  ]
}
